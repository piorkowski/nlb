{% extends 'base.html.twig' %}

{% block title %}Rejestracja{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body p-5">
                    <h2 class="text-center mb-4">Rejestracja</h2>

                    {% for flash_error in app.flashes('verify_email_error') %}
                        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                    {% endfor %}

                    <a href="{{ path('hwi_oauth_service_redirect', {'service': 'google' }) }}" 
                       class="btn btn-outline-danger w-100 mb-2">
                        <i class="fab fa-google me-2"></i>Zarejestruj przez Google
                    </a>

                    <a href="{{ path('hwi_oauth_service_redirect', {'service': 'facebook' }) }}" 
                       class="btn btn-outline-primary w-100 mb-3">
                        <i class="fab fa-facebook me-2"></i>Zarejestruj przez Facebook
                    </a>

                    <div class="text-center mb-3">
                        <span class="text-muted">lub</span>
                    </div>

                    {{ form_errors(registrationForm) }}

                    {{ form_start(registrationForm) }}
                        <div class="mb-3">
                            {{ form_label(registrationForm.firstname, 'Imię', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.firstname, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.lastname, 'Nazwisko', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.lastname, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="mb-3">
                            {{ form_label(registrationForm.plainPassword, 'Hasło', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div class="form-check mb-3">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                        </div>

                        <button type="submit" class="btn btn-success w-100">Zarejestruj się</button>
                    {{ form_end(registrationForm) }}

                    <div class="text-center mt-3">
                        <a href="{{ path('app_login') }}">Masz już konto? Zaloguj się</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
