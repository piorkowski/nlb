{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}{{ title }}{% endblock %}

{% block main %}
    <div class="card">
        <div class="card-body">
            {% if games|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                        <tr>
                            <th>Data</th>
                            <th>Liga</th>
                            {% if type == 'team' %}
                                <th>Drużyna A</th>
                                <th>Drużyna B</th>
                                <th>Wynik</th>
                                <th>Punkty</th>
                            {% else %}
                                <th>Gracze</th>
                                <th>Wynik</th>
                                <th>Punkty</th>
                            {% endif %}
                            <th>Status</th>
                            <th>Akcje</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for game in games %}
                            <tr>
                                <td>{{ game.gameDate ? game.gameDate|date('d.m.Y H:i') : '-' }}</td>
                                <td>{{ game.league ? game.league.name : '-' }}</td>

                                {% if type == 'team' %}
                                    <td><strong>{{ game.teamA.name }}</strong></td>
                                    <td><strong>{{ game.teamB.name }}</strong></td>
                                    <td>
                                        {% if game.status.value == 'finished' %}
                                            <strong>{{ game.teamAScore }} - {{ game.teamBScore }}</strong>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if game.status.value == 'finished' and game.teamAPoints is not null %}
                                            <span class="badge bg-success">{{ game.teamAPoints }}</span>
                                            :
                                            <span class="badge bg-success">{{ game.teamBPoints }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                {% else %}
                                    <td>
                                        {% set players = game.allPlayers %}
                                        {% for player in players %}
                                            {{ player.fullName }}{% if not loop.last %} vs {% endif %}
                                        {% endfor %}
                                    </td>
                                    <td>
                                        {% if game.status.value == 'finished' %}
                                            {% for player in players %}
                                                <strong>{{ player.fullName }}: {{ game.getPlayerTotalScore(player) }}</strong>
                                                {% if not loop.last %}<br>{% endif %}
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if game.status.value == 'finished' and game.teamAPoints is not null %}
                                            {% set players = game.allPlayers %}
                                            {% for player in players %}
                                                <span class="badge bg-success">{{ game.getPlayerPoints(player) }}</span>
                                                {% if not loop.last %}<br>{% endif %}
                                            {% endfor %}
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                {% endif %}

                                <td>
                                    {% set statusLabels = {
                                        'draft': 'Szkic',
                                        'planned': 'Planowany',
                                        'in_progress': 'W trakcie',
                                        'finished': 'Zakończony',
                                        'cancelled': 'Anulowany'
                                    } %}
                                    {% set statusColors = {
                                        'draft': 'bg-secondary',
                                        'planned': 'bg-info',
                                        'in_progress': 'bg-primary',
                                        'finished': 'bg-success',
                                        'cancelled': 'bg-danger'
                                    } %}
                                    <span class="badge {{ statusColors[game.status.value] ?? 'bg-secondary' }}">
                                        {{ statusLabels[game.status.value] ?? game.status.value }}
                                    </span>
                                </td>

                                <td>
                                    <a href="{{ ea_url().setController('App\\Controller\\Admin\\GameCrudController').setAction('detail').setEntityId(game.id) }}"
                                       class="btn btn-sm btn-primary">
                                        <i class="fa fa-eye"></i> Szczegóły
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                {# Paginacja #}
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(games) }}
                </div>
            {% else %}
                <div class="alert alert-info">
                    <i class="fa fa-info-circle"></i> Brak meczy do wyświetlenia
                </div>
            {% endif %}
        </div>
    </div>
{% endblock %}
