{% extends '@EasyAdmin/page/content.html.twig' %}


{% block content_title %}
    Ranking graczy
{% endblock %}

{% block main %}
<div class="card">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Zawodnik</th>
                        <th>Mecze</th>
                        <th>Suma punktów</th>
                        <th>Średnia</th>
                        <th>Strike'i</th>
                        <th>Spare'y</th>
                    </tr>
                </thead>
                <tbody>
                    {% for position, stat in stats %}
                        <tr>
                            <td>
                                {% if position < 3 %}
                                    <span class="badge
                                        {% if position == 0 %}bg-warning{% endif %}
                                        {% if position == 1 %}bg-secondary{% endif %}
                                        {% if position == 2 %}bg-danger{% endif %}
                                    ">{{ position + 1 }}</span>
                                {% else %}
                                    {{ position + 1 }}
                                {% endif %}
                            </td>
                            <td>{{ stat.player.fullName }}</td>
                            <td>{{ stat.gamesCount }}</td>
                            <td>{{ stat.totalScore }}</td>
                            <td class="font-weight-bold">{{ stat.avgScore }}</td>
                            <td>{{ stat.strikes }}</td>
                            <td>{{ stat.spares }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
